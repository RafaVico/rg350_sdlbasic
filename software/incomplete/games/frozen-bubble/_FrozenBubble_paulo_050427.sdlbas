sub balldelete(x,y)
    dim paintmap[25,25]

    balls_deletable=0
    xstart=x
    ystart=y
    src_col=tableball[x,y]
    pm=10

    while(0=0)
	if tableball[x,y]=src_col then
	    balls_deletable+=1
	    paintmap[x,y]=pm
	else
	    exit while
    	end if

	if tableball[x+1,y]=src_col  and paintmap[x+1,y]=0 then
		    x=x+1
		    pm=1
	elseif tableball[x-1,y]=src_col  and paintmap[x-1,y]=0 then
		    x=x-1
		    pm=2
	elseif tableball[x,y+1]=src_col and paintmap[x,y+1]=0 then
		    y=y+1
		    pm=3
	elseif tableball[x+1,y+1]=src_col  and paintmap[x+1,y+1]=0 and (y mod 2)=1 then
		    y=y+1
		    x=x+1
		    pm=4
	elseif tableball[x-1,y+1]=src_col  and paintmap[x-1,y+1]=0 and (y mod 2)=0 then
		    y=y+1
		    x=x-1
		    pm=5
	elseif tableball[x,y-1]=src_col  and paintmap[x,y-1]=0 then
		    y=y-1
		    pm=6
	elseif tableball[x+1,y-1]=src_col  and paintmap[x+1,y-1]=0 and (y mod 2)=1 then
		    y=y-1
		    x=x+1
		    pm=7
	elseif tableball[x-1,y-1]=src_col  and paintmap[x-1,y-1]=0 and (y mod 2)=0 then
		    y=y-1
		    x=x-1
		    pm=8
	else
	    'if x=xstart and y=ystart then
		'exit while
	    'end if

	    'if paintmap[x,y]=10 then
		'exit while
	    'end if

	    if paintmap[x,y]=1 then
		x=x-1
	    elseif paintmap[x,y]=2 then
		x=x+1
	    elseif paintmap[x,y]=3 then
		y=y-1
	    elseif paintmap[x,y]=4 then
		y=y-1
		x=x-1
	    elseif paintmap[x,y]=5 then
		y=y-1
		x=x+1
	    elseif paintmap[x,y]=6 then
		y=y+1
	    elseif paintmap[x,y]=7 then
		y=y+1
		x=x-1
	    elseif paintmap[x,y]=8 then
		y=y+1
		x=x+1
	    else
		'boxer(x,y,0x0000ff)
		exit while
	    end if
	end if

    end while

    if balls_deletable>3 then
	play_sound(5,1)
	r=1
	while r<>0
	    r=0
	    for x1=0 to 25
		for y1 = 0 to 25
		    if paintmap[x1,y1]<>0 then
			r=1
			n=tablesprite(x1,y1)
			if  tablev[n]=0 then

'--- bug!!!!!!!!!!

			    tablev[n]=-1  '- weird...
			end if
			if ysprite(n)<=((y1+ycompressor)*28) then
			    tablev[n]=0
			    appendemap[x1,y1]=0
			    paintmap[x1,y1]=0
			end if
'			sprite(n,xsprite(n),ysprite(n)+tablev[n],frsprite(n))

			sprite(n,xsprite(n)+xbalcolspeed[x1,y1],ysprite(n)+ybalcolspeed[x1,y1],frsprite(n))
                  ybalcolspeed[x1,y1]=ybalcolspeed[x1,y1]+ybalcolaccel

'- cç:     sprite(i,xsprite(i)+xbalcolspeed[i],ysprite(i)+ybalcolspeed[i],1007)

'-      ybalcolspeed[i]=ybalcolspeed[i]+ybalcolaccel



			if ysprite(n)>500 then
			    deletesprite(n)
			    paintmap[x1,y1]=0
			    tableball[x1,y1]=0
			    tablev[n]=0
			end if
		    end if
		next
	    next
	    screenswap
	end while
    end if
end sub




sub appendball
	    y=int(yball/28)-ycompressor
	    if (y mod 2)=0 then
		x=int((xball+16)/32)
	    else
		x=int((xball)/32)
	    end if


	    tableball[x,y]=c
	    n=(y*25)+x+10
	    if n>ballcount then:ballcount=n:end if

	    if (y mod 2)=0 then
		sprite(n,(x * 32),(y+ycompressor)*28+28,1000+c)
	    else
		sprite(n,(x * 32)+16,(y+ycompressor)*28+28,1000+c)
	    end if
    	    balldelete(x,y)
	    balldistac
	    deletesprite(2)


	    xball=320
	    yball=400
	    xv=0: yv=0
	    c=c1
	    countcompressor+=1

end sub

sub ball(xv,yv)
    xball+=xv
    yball+=yv

    if xball <220 and xv <0 then :xv=abs(xv) :end if
    if xball >420 and xv >0 then :xv=-abs(xv) :end if

    'set collision
    for i =10 to ballcount
	if spritehit(2,i) and appendemap[xsprite(i)/32,(ysprite(i)/28)-1-ycompressor]<>0 then
	    appendball:xv=0:yv=0:exit for
	end if
    next

    'if yball <55 then :appendball:xv=0:yv=0:end if
    if spritehit(2,5) then:appendball:xv=0:yv=0:end if

    sprite(2,xball,yball,1000+c)

end sub


sub prepareball(level)
    for y=1 to 3
	for x=6 to 13
	    c=rnd(7)+1

    	    tableball[x,y]=c
	    appendemap[x,y]=1

	    n=(y*25)+x+10
	    if n>ballcount then:ballcount=n:end if

	    if (y mod 2)=0 then
		sprite(n,(x * 32),(y+ycompressor)*28+28,1000+c)
	    else
		sprite(n,(x * 32)+16,(y+ycompressor)*28+28,1000+c)
	    end if
	next
    next

end sub



sub game
    if fileexists("snd/frozen-mainzik-1p.xm") then
	loadmusic("snd/frozen-mainzik-1p.xm")
	if settings[6]=1 then : playmusic(-1):end if
    end if
    screenopen(2,640,480,0,0,640,480,0)


    while key(27)=0
	pasteicon(0,0,1051)
	ink (0):bar(135,190,152,350)
	screenswap

	c=rnd(7)+1
	c1=rnd(7)+1
	c2=rnd(7)+1
	ang =0
	launchx=0
	launchy=0
	ballcount=10
	xball=320
	yball=400
	countcompressor=0
	ycompressor=0
	for x=0 to 25
	    for y=0 to 25
		tableball[x,y]=0
	    next
	next
	gameover=0
	win=0
	prepareball(0)

	while key(27)=0
	    compressor
	    shoot(ang)
	    ball(launchx,launchy)
	    balldown

	    for x=5 to 18
		if tablesprite(x,13-ycompressor)<>0 then: gameover=1 :end if
	    next
	    if gameover=1 then :exit while:end if

	    checkwin
	    if win=1 then
		sprite(512,160,150,1052)
		screenswap
		waitkey
		deletesprite(512)
		exit while
	    end if

	    if key(k_left) then : ang+=1 :end if
	    if key(k_right) then : ang-=1 :end if

	    if ang<-39 then :ang=-39:end if
	    if ang>39 then :ang=39 :end if

	    if launchx+launchy=0 then
		if key(k_up) then
		    play_sound(7,1)
		    launchx=-(ang/5)
		    launchy=-(41-abs(ang))/5
		    c1=c2

		    r=0
		    while r=0
			c2=rnd(7)+1
			for y =0 to 10
			    for x=5 to 15
				if tableball[x,y]=c2 then :r=1:exit for:end if
			    next
			    if r=1 then :exit for:end if
			next
		    end while
		end if
	    else
		sprite(4,320,400,1000+c1)

	    end if

	    sprite(3,319,455,1000+c2)
	    screenswap:waitvbl
	end while
	if gameover=1 then :exit while:end if
    end while

    if gameover=1 then
	play_sound(8,1)
	sprite(512,160,150,1053)
	for i =10 to ballcount
	    if livesprite(i)<> 0 then
		sprite(i,xsprite(i),ysprite(i),1010)
		screenswap
		wait(15)
	    end if
	next
	play_sound(12,1)
	waitkey

	deletesprite(512)
    else
	play_sound(3,1)
	wait (3000)
    end if
    for i =1 to ballcount
	    deletesprite(i)
    next
    screenclose(2)
    screen(0)

    if fileexists("snd/introzik.xm") then
	loadmusic("snd/introzik.xm")
	if settings[6]=1 then : playmusic(-1):end if
    end if
end sub

