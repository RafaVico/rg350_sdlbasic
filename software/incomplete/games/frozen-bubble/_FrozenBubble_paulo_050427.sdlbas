sub loadsettings
    if fileexists("frozen-bubble.cfg") then
	open "frozen-bubble.cfg" for input as 1
	for i = 1 to 8
	    file input #1,a$
	    settings[i]=val(a$)
	next
	close 1
    end if
    if settings[4]=0 then
	setdisplay(640,480,16,1)
    else
	setdisplay(640,480,16,0)
    end if

end sub

sub savesettings
	open "frozen-bubble.cfg" for output as 1
	for i =1  to 8
	    print #1,str$(settings[i])
	next
	close 1
end sub

