sub runmenu(n)
    if n= 1 then : game : end if

    if n = 4 then
	if settings[4]=0 then
	    settings[4]=1
	    setdisplay(640,480,32,0)

	else
	    settings[4]=0
	    setdisplay(640,480,32,1)

	end if
    end if

    if n = 5 then
	select case  (settings[5])
	    case 2
	    settings[5]=0
	    case 1
	    settings[5]=2
	    case 0
	    settings[5]=1
	end select
    end if

    if n = 6 then
	if settings[6]=0 then
	    settings[6]=1
	    playmusic(-1)
	else
	    settings[6]=0
	    stopmusic
	end if
    end if

    savesettings
end sub
