dim a$[10]

for i =0 to 10
    a$[i]=str$(i)
next

for i =0 to 10
    prints(a$[i])
next

prints("now erasing array with command: erase a$")

erase a$

for i =0 to 10
    prints(a$[i])
next
waitkey
